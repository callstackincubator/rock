{
  "name": "rock",
  "version": "0.0.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "pnpm -r run build",
    "test": "vitest run",
    "e2e": "pnpm -r run e2e",
    "lint": "eslint .",
    "prettier": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "watch": "pnpm --filter='./packages/**' -r --parallel --stream run dev",
    "dev": "pnpm --filter='./packages/**' -r --parallel --stream run dev",
    "validate": "pnpm typecheck && pnpm lint && pnpm test",
    "link-packages": "node ./scripts/linkPackages.mjs",
    "version": "changeset version && ./scripts/update-template-dependencies.sh && pnpm install --no-frozen-lockfile",
    "publish:npm": "./scripts/npm-publish.sh",
    "verdaccio:init": "node ./scripts/verdaccio-init.mjs",
    "verdaccio:publish": "node ./scripts/verdaccio-publish.mjs",
    "verdaccio:reset": "./scripts/verdaccio-reset.sh"
  },
  "private": true,
  "dependencies": {
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@clack/prompts": "^0.11.0",
    "@eslint/js": "^9.33.0",
    "@types/node": "^18.19.122",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@typescript-eslint/utils": "^8.39.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "fast-glob": "^3.3.3",
    "nano-spawn": "^0.2.1",
    "prettier": "^3.6.2",
    "typescript": "5.9.2",
    "typescript-eslint": "^8.39.0",
    "verdaccio": "^6.1.6",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.11.0"
}
