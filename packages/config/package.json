{
  "name": "@rock-js/config",
  "version": "0.11.6",
  "description": "Configuration management utilities for Rock projects",
  "type": "module",
  "types": "./dist/src/index.d.ts",
  "exports": {
    "types": "./dist/src/index.d.ts",
    "default": "./dist/src/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.lib.json",
    "dev": "tsc -p tsconfig.lib.json --watch",
