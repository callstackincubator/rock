    "publish:verdaccio": "npm publish --registry http://localhost:4873 --userconfig ../../.npmrc"
  },
  "dependencies": {
    "@babel/code-frame": "^7.26.2",
    "@rock-js/provider-github": "^0.11.6",
    "@rock-js/tools": "^0.11.6",
