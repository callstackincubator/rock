{
  "name": "@rock-js/plugin-repack",
  "version": "0.11.6",
  "description": "Re.Pack bundler integration plugin for Rock",
  "type": "module",
  "types": "./dist/src/index.d.ts",
  "exports": {
    "types": "./dist/src/index.d.ts",
    "default": "./dist/src/index.js"
  },
  "files": [
    "dist",
    "template"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.lib.json",
    "dev": "tsc -p tsconfig.lib.json --watch",
    "publish:npm": "npm publish --access public",
    "publish:verdaccio": "npm publish --registry http://localhost:4873 --userconfig ../../.npmrc"
  },
  "dependencies": {
    "@rock-js/tools": "^0.11.6",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@rock-js/config": "^0.11.6"
  },
  "peerDependencies": {
    "@callstack/repack": ">=5",
    "@rspack/core": ">=1.2.8",
    "@swc/helpers": ">=0.5.15"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/callstack/rock.git",
    "directory": "packages/plugin-repack"
  },
  "homepage": "https://rockjs.dev",
  "bugs": "https://github.com/callstack/rock/issues",
  "license": "MIT",
  "author": "Callstack <incubator@callstack.com>"
}
